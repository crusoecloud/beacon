[Unit]
Description=Crusoe Beacon: vector.dev based telemetry agent for crusoe resources
After=docker.service
Requires=docker.service

[Service]
Type=simple
TimeoutStartSec=0
Restart=always
ExecStart=/usr/bin/docker compose -f /etc/crusoe/beacon/docker-compose.yaml up
ExecStop=/usr/bin/docker compose -f /etc/crusoe/beacon/docker-compose.yaml down

[Install]
WantedBy=multi-user.target